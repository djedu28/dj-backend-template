{
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/:match*?",
            "destination": "/public/:match*"
        }
    ],
    "builds": [
        {
            "src": ".sequelizerc",
            "use": "@vercel/static"
        },
        {
            "src": "package.json",
            "use": "@vercel/static"
        },
        {
            "src": "yarn.lock",
            "use": "@vercel/static"
        },
        {
            "src": "/public/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "/src/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "/api/index.js",
            "use": "@vercel/node"
        }
    ]
}
