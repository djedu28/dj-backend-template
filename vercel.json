{
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/:match*?",
            "destination": "/public/:match*"
        }
    ],
    "builds": [
        {
            "src": "/public/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "/api/index.js",
            "use": "@vercel/node"
        }
    ],
    "files": [
        "package.json",
        "yarn.lock",
        ".sequelizerc",
        "node_modules/",
        "public/",
        "src/"
    ]
}
