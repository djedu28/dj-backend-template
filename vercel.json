{
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/:match*",
            "destination": "/public/:match*"
        },
        {
            "source": "/",
            "destination": "/public/index.html"
        }
    ],
    "builds": [
        {
            "src": "/public/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "/error.log",
            "use": "@vercel/static"
        },
        {
            "src": "/combined.log",
            "use": "@vercel/static"
        },
        {
            "src": "/api/index.js",
            "use": "@vercel/node"
        }
    ],
    "build": {
        "env": {
            "YARN_INIT": "true"
        },
        "command": "yarn && yarn install"
    },
    "files": [
        "package.json",
        "yarn.lock",
        ".sequelizerc",
        "node_modules/",
        "public/",
        "src/",
        "."
    ]
}
